@import "colors.styl"

.table-line {
  display table
  table-layout fixed
  width 100%
}
.table-line__cell {
  display table-cell
  vertical-align middle
}
._show-on-load {
  transition 1s
  opacity 0
}
._text-big {
  font-size 20px
}
._text-small {
  color $black_light
  font-size 12px
}
._social-button__vk_hover {
  background-color $vk_color
}
._social-button__ok_hover {
  background-color $ok_color
}
.main-logo {
  background-image url('/img/logo.svg')
  background-size 260px 160px
  width: 260px
  height: 160px
}
.social-logo {
  background-image url('/img/social.png')
  background-size 32px
  width: 16px
  height: 20px
}
.social-logo_vk {
  background-position-x 0
}
.social-logo_ok {
  background-position-x -16px
}
.input-title {
  width 100%
  margin-bottom 10px
  text-align center
  float left
}
.input-value {
  width 100%
  margin-bottom 10px
  text-align center
  padding 5px 10px
  border 1px solid $grey_dark
  border-radius 5px
  font-size 16px
  float left
}
.input-submit {
  background-color $purple
  padding 5px 20px
  margin-top 10px
  border none
  border-radius 3px
  color #fff
  text-align center
  float left
  transition .3s
}
._input-submit_hover {
  background-color $purple_dark
}
.title,
.subtitle {
  width 100%
  margin-top 5px
  color $black_dark
  font-size 18px
  text-transform uppercase
  text-align center
  float left
}
.subtitle {
  padding 10px 0 20px
  margin 0
  border-bottom 1px solid $grey
  color $black_light
  font-size 14px
  text-transform none
}
.note {
  width 100%
  padding 20px
  margin 30px 0
  border 1px solid $black_light
  border-radius 5px
  text-align justify
  float left
}
.note__title {
  padding-bottom 20px
  margin-bottom 20px
  border-bottom 1px solid $grey
  font-size 14px
  font-weight bold
}
.line {
  background-color $grey
  width 100%
  height 1px
  margin 10px 0
  float left
}