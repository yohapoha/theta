@import "colors.styl"

a,
a:visited,
a:active {
  color $purple
}
a:hover {
  color $purple_dark
}
h1,
h2,
h3,
h4,
h5 {
  padding 0
  margin 0
  font-weight normal
}
table {
  margin 0
  padding 0
}
input {
  text-align center
}
.menu-main {
  background-color: $white
  width 120px
  padding 3px 15px
  margin-top 10px
  border 1px solid $grey
  border-radius 3px
  color $black
  text-align center
  cursor pointer
  transition .3s
}
.menu-main:hover {
  border-color $black_light
}