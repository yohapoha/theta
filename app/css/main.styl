@import "colors.styl"
@import "simples.styl"

a,
a:visited,
a:active {
  color $purple
}
a:hover {
  color $purple_dark
}
h1,
h2,
h3,
h4,
h5 {
  padding 0
  margin 0
  font-weight normal
}
table {
  margin 0
  padding 0
}
input {
  text-align center
}
.header-slider {
  width 500px
  margin 0 50px
  float left
}
.slider-navigation {
  width 100%
  float left
}
.slider-navigation .slider-navigation__link {
  padding 10px 0
  line-height 25px
  float left
  cursor pointer
}
.slider-line {
  background-color: $grey
  width 100%
  height 1px
  float left
}
.slider-line .slider-line__slider {
  background-color: $black
  width 100px
  height 2px
  float left
  transition .3s
}
.link__logo {
  @extend .main-logo
  background-size 65px;
  background-position-y 0px
  width 65px
  height 25px
}