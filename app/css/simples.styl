@import "colors.styl"

.head,
.body {
  width 100%
  float left
}
._show-load {
  transition 1s
  opacity 0
}
._text-big {
  font-size 20px
}
._text-small {
  font-size 12px
}
.logo {
  background-image url('/img/logo_b.png')
  background-size 260px
  width: 260px
  height: 160px
}
.space {
  width 100%
  height 40px
  float left
}
.input-title {
  width 100%
  margin-bottom 10px
  text-align center
  float left
}
.input-value {
  width 100%
  margin-bottom 10px
  text-align center
  padding 5px 10px
  border 1px solid $lines_dark_color
  border-radius 5px
  font-size 16px
  float left
}
.input-submit {
  background-color $button_color
  padding 5px 20px
  margin-top 10px
  border none
  border-radius 3px
  color #fbfbfb
  text-align: center
  float left
  transition .1s
}
.input-submit_hover {
  background-color $button_hover_color
}
.title,
.subtitle {
  width 100%
  margin-top 5px
  color $text_color
  font-size 18px
  text-transform uppercase
  text-align center
  float left
}
.subtitle {
  padding 10px 0 20px
  margin 0 0 20px
  border-bottom 1px solid $lines_color
  color $subtext_color
  font-size 14px
  text-transform none
}
.note {
  width 100%
  padding 20px
  margin 20px 0
  border 1px solid $note_color
  border-radius 5px
  text-align justify
  float left
}
.note__title {
  padding-bottom 20px
  margin-bottom 20px
  border-bottom 1px solid $lines_color
  font-size 14px
  font-weight bold
}
.line {
  background-color $lines_color
  width 100%
  height 1px
  margin 10px 0
  float left
}