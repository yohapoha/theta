@import "colors.styl"
@import "simples.styl"

.sidebar-page {
  width 300px
  padding 20px
  margin-top 30px
  border-radius 5px
  float left
}
.sidebar-page__head {
  @extend .head
}
.sidebar-page__head__title {
  @extend .title
}
.sidebar-page__head__subtitle {
  @extend .subtitle
}
.sidebar-page__body {
  @extend .body
}
.sidebar-page__body__panel_big {
  @extend .panel_big
}
.sidebar-page__body__panel_small {
  @extend .panel_small
}
.sidebar-page__body__line {
  @extend .line
}
.sidebar-page__body__input-title,
.sidebar-page__body__input-value {
  width 100%
  margin-bottom 10px
  text-align center
  float left
}
.sidebar-page__body__input-value {
  padding 5px 10px
  border 1px solid $lines_dark_color
  border-radius 5px
}
.sidebar-page__body__input-submit {
  @extend .input-submit
}
.sidebar-page__body__input-submit:hover {
  @extend .input-submit_hover
}
.sidebar-page__body__workline,
.sidebar-page__body__workline_today {
  width 100%
  padding 5px
  float left
}
.sidebar-page__body__workday {
  width: 90px
  text-align center
  float left
}
.sidebar-page__body__worktime {
  width: 150px
  text-align right
  float left
}
.sidebar-page__body__workday__point {
  background-color: #e2e2e2
  width: 6px
  height 6px
  margin 7px 4px 0 0
  border-radius 3px
  float left
}
.sidebar-page__body__workline_today .sidebar-page__body__workday__point{
  background-color: #2b2b2b
}