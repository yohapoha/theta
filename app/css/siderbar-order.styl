.sidebar .input-title {
  width: 100%
  text-align: center
  float: left
}
.sidebar .input-value {
  width: 100%
  float: left
}
@media (min-width: 1024px) {
  .sidebar .input-title {
    width: 50%
    text-align: left
  }
  .sidebar .input-value {
    width: 50%
  }
}
.sidebar .input-title, .sidebar .input-value {
  box-sizing: border-box
  margin: 5px 0
}
.sidebar .input-value {
  padding: 5px 10px
  border: 1px solid #e2e2e2
  border-radius: 5px
}
.button-center {
  display: flex
  width: 100%
  height: 100%
  margin-top: 20px;
  border-top: 1px solid #e2e2e2
  justify-content: center
  float: left
}
  .input-form {
    width: 100%
  }
.input-submit {
  background-color: #2b2b2b
  width: 160px
  padding: 4px 0
  margin: 20px auto 0
  border: none
  border-radius: 3px
  color: #fbfbfb
  text-align: center
  transition: .3s
}
.input-submit:hover {
  background-color: #0b0b0b;
}