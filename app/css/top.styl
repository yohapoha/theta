@import "colors.styl"
@import "simples.styl"

.top-panel {
  width 100%
  border-bottom 1px solid #e2e2e2
}
.top {
  width: 1000px
  margin 0 auto
}
.top-logo {
  box-sizing border-box
  width 600px
  height 300px
  margin 40px 0
  border-right 1px solid #e2e2e2
  float left
}

.top-logo .top-logo__logo {
  background-image url('/img/logo_b.png')
  background-size 260px
  width: 260px
  height: 160px
}
.top-switch {
  width 400px
  height 300px
  margin 40px 0
  float left
}
.top-switch .top-switch__body {
  width 280px
  float left
}
.top-order .top-order__head {
  @extend .head
}
.top-order__head .top-order__head__title {
  @extend .title
  margin-top 0
}
.top-order__head .top-order__head__subtitle {
  @extend .subtitle
}
.top-order .top-order__body {
  @extend .body
}
.top-order__body .top-order__body__input-title,
.top-order__body .top-order__body__input-value {
  width 100%
  margin-bottom 10px
  text-align center
  float left
}
.top-order__body .top-order__body__input-value {
  padding 5px 10px
  border 1px solid $lines_dark_color
  border-radius 5px
  font-size 16px
}
.top-order__body .top-order__body__line {
  @extend .line
}
.top-order__body .top-order__body__input-submit {
  @extend .input-submit
  margin-bottom 0
}
.top-order__body .top-order__body__input-submit:hover {
  @extend .input-submit_hover
}
