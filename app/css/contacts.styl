@import "colors.styl"
@import "simples.styl"

.contacts-container {
  width 100%
  border-bottom 1px solid $line_color
}
.contacts {
  width: 1000px
  margin 0 auto
}
.contacts .contacts__data.contacts__data_text-small {
  @extend ._text-small
}
.contacts .contacts__data.contacts__data_text-big {
  @extend ._text-big
}
.contacts-table-line {
  @extend .table-line
}
.contacts-table-line .contacts-table-line__cell {
  @extend .table-line__cell
  padding 25px 10px
}