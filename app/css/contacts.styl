@import "colors.styl"
@import "simples.styl"

.contacts-container {
  width 100%
  border-bottom 1px solid $line_color
}
.contacts {
  width: 1000px
  margin 0 auto
}
.contacts-table-line {
  @extend .table-line
}
.contacts-table-line .contacts-table-line__cell {
  @extend .table-line__cell
  padding 15px 10px
}
.support-email {
  text-align center
}
.support-email .support-email__title.support-email__title_text-small {
  @extend ._text-small
}
.support-email .support-email__address.support-email__address_text-big {
  @extend ._text-big
}
.support-phone {
  text-align center
}
.support-phone .support-phone__title.support-phone__title_text-small {
  @extend ._text-small
}
.support-phone .support-phone__number.support-phone__number_text-big {
  @extend ._text-big
}