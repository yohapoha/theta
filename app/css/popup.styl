@import "colors.styl"
@import "simples.styl"

.popup-container {
  display none
  background-color rgba(100, 60, 250, 0.8)
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index 2
}
.popup {
  background-color: $white
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  width: 600px
  height 500px
  padding 30px
  border-radius 5px
  margin auto
}
.popup__close {
  position absolute
  top 0
  right 0
  background-color: $grey_dark
  background-image url('/img/buttons.png')
  background-size 20px
  width 20px
  height 20px
  margin 15px
  cursor pointer
  transition .3s
}
.popup__close:hover {
  background-color: $purple
}
.popup-head .popup-head__title {
  @extend .title
}
.popup-head .popup-head__subtitle {
  @extend .subtitle
}