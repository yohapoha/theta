@import "colors.styl"
@import "simples.styl"

.popup-container {
  display none
  background-color rgba(0, 0, 0, .5)
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  opacity 0
  transition .5s
  z-index 2
}
.popup {
  box-size border-box
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background-color: $white
  padding 30px
  border-radius 5px
  margin auto
  box-shadow 0px 0px 15px 0px $black_light
}
.popup__close {
  position absolute
  top 0
  right 0
  background-color: $purple
  background-image url('/img/buttons.png')
  background-size 20px
  width 20px
  height 20px
  margin 15px
  cursor pointer
  transition .3s
}
.popup__close:hover {
  background-color: $purple_dark
}
.popup-head .popup-head__title {
  @extend .title
}
.popup-head .popup-head__subtitle {
  @extend .subtitle
}
.popup-order {
  width 500px
  height 500px
}